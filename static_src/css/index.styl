@import "_mixins.styl";

@font-face
  font-family: 'OpenSans';
  src: url('../fonts/OpenSans-Regular.ttf')

@font-face
  font-family: 'OpenSans';
  src: url('../fonts/OpenSans-Bold.ttf')

*
  font-family: 'OpenSans', Arial, sans-serif

body
  display: flex;
  flex-direction: column;
  margin: 0;
  overflow hidden

.button
  margin: 15px 0 0;
  padding: 8px 0;
  border-radius: 0;
  border: 1px solid #bcbcbc;
  text-align: center;
  text-decoration: none;
  white-space: nowrap;
  line-height: normal;
  font-family: Arial,sans-serif;
  transition: all .2s ease-in-out;

.msw-addComments
  position: absolute;
  top: 168px;
  left: 1px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px;
  width: calc(100% - 2px);
  background: #fafafa;

  .msw-button-kit
    margin-top: 0;
    width: 140px;
    text-decoration: none;

.msw-comment
  position: relative;
  padding: 15px 0;

  &::after
    content: '';
    position: absolute;
    left: 30px;
    bottom: 0;
    display: block;
    height: 1px;
    width: calc(100% - 30px);
    background: rgba(209, 209, 209, 0.5);

  &-header
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: 15px;

  &-img
    margin-right: 20px;
    border-radius: 50%;

  a
    font-size: 12px;
    line-height: normal;

    &:hover,
    &:active,
    &:focus
      text-decoration: none;
      color: #ffb100;

  &-name
    margin-right: 20px;
    color: #091091;

  &-date
    color: #7d7d7d;

  p
    margin: 0;
    font-size: 13px;
    line-height: 18px;

  &-footer
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 15px;

    &-reply
      .md-editor
        margin-top: 15px;
    
      &-btn
        display: none;
        align-items: center;
        justify-content: space-between;

        .msw-button-kit
          margin-top: 0;
          width: 90px;

  &-reply
    font-size: 12px;
    line-height: normal;
    color: #091091;

    &::before
      content: '';
      display: inline-block;
      margin-right: 5px;
      width: 15px;
      height: 17px;
      vertical-align: middle;
      background-size: contain;

.msw-comments
  ul
    padding: 0;
    margin: 0;
    list-style: none;

  li
    & > ul
      margin-left: 30px;

    & > ul > li > ul > li ul > li ul
      margin-left: 0;

.msw-enter-reply
  background: #091091;
  border-color: #091091;
  color: #fff;
  
textarea
  display block
  width 100%
  resize none